<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_valyuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/valuta"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/rectangle_3"
        app:layout_constraintTop_toTopOf="@id/rectangle_3"
        app:layout_constraintBottom_toTopOf="@+id/txt_farq"/>
    <TextView
        android:id="@+id/txt_farq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:text="@string/farq"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/rectangle_3"
        app:layout_constraintTop_toBottomOf="@id/txt_valyuta"
        app:layout_constraintBottom_toTopOf="@id/txt_date"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:text="@string/vaqt"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_farq"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_3"
        app:layout_constraintStart_toStartOf="@id/rectangle_3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>